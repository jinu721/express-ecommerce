      <%- include('../layouts/breadcrumbs.ejs')  %>

      <!--=============== CART ===============-->
      <% if(isCartEmpty){ %>
      <section class="cartEmpty" >
        <p>Not items in cart</p>
      </section>
        <% }else{ %>
          <section class="cart section--lg container">
            <div class="table__container">
              <table class="table">
                <thead>
                  <tr>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                    <th>Delete</th>
                  </tr>
                </thead>
                <tbody>
                  <% cart.items.forEach(item => { %>
                    <tr>
                      <td>
                        <a href="/details/<%= item.productId._id %>">
                          <img
                            src="<%= item.productId.images && item.productId.images[0] ? item.productId.images[0] : '/images/default-placeholder.png' %>"
                            alt="<%= item.productId.name %>"
                            class="table__img"
                          />
                        </a>
                      </td>
                      <td>
                        <h3 class="table__title">
                          <%= item.productId.name %>
                        </h3>
                        <p class="table__description">
                          <%= item.productId.description.slice(0, 40) %>...
                        </p>
                      </td>
                      <td>
                        <% if (item.hasOffer) { %>
                          <div class="price-container">
                            <span class="table__price--original">&#8377;<%= Math.round(item.originalPrice) %></span>
                            <span class="table__price">&#8377;<%= Math.round(item.finalPrice) %></span>
                            <% if (item.isFestivalOffer) { %>
                              <small class="festival-badge">ðŸŽ„ Festival</small>
                            <% } %>
                          </div>
                        <% } else { %>
                          <span class="table__price">&#8377;<%= isNaN(item.price) ? Math.round(item.originalPrice || 0) : Math.round(item.price) %></span>
                        <% } %>
                      </td>
                      <td>
                        <input 
                          type="number" 
                          value="<%= item.quantity %>" 
                          class="quantity" 
                          data-id="<%= item._id %>" 
                          min="1" 
                        />
                      </td>
                      <td>
                        <span>
                          &#8377;<span class="Total" data-id="<%= item._id %>">
                            <%= item.hasOffer ? Math.round(item.totalFinalPrice) : (isNaN(item.total) ? '0' : Math.round(item.total)) %>
                          </span>
                        </span>
                      </td>
                      <td class="">
                        <i data-id="<%= item._id %>" class="fi fi-rs-trash table__trash deleteIconCart"></i>
                      </td>
                    </tr>
                  <% }) %>
                  
                </tbody>
              </table>
            </div>
    
            <!-- <div class="cart__actions">
              <a href="#" class="btn flex btn__md">
                <i class="fi-rs-shuffle"></i> Update Cart
              </a>
              <a href="#" class="btn flex btn__md">
                <i class="fi-rs-shopping-bag"></i> Continue Shopping
              </a>
            </div> -->
    
            <div class="divider">
              <i class="fi fi-rs-fingerprint"></i>
            </div>
    
            <div class="cart__group grid">
              <div>
                <!-- <div class="cart__shippinp">

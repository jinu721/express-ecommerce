<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
    />
    <link
      href="https://unpkg.com/cropperjs@1.5.12/dist/cropper.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/modern-admin.css" />
    <link rel="stylesheet" href="/css/ios-toast.css" />
    <link rel="stylesheet" href="/css/image-selector.css" />
    <style>
      .image-container {
        position: relative;
        display: inline-block;
        width: 150px;
        height: 150px;
      }

      .cateImg {
        width: 100%;
        height: 100%;
        border-radius: 50%;
        object-fit: cover;
      }

      .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 50%;
        opacity: 0;
        transition: opacity 0.3s ease;
      }

      .image-container:hover .overlay {
        opacity: 1;
      }

      .add-icon {
        color: white;
        font-size: 24px;
      }
    </style>
  </head>
  <body style="display: flex;">
    <input type="hidden" value="<%= category._id  %>" name="" id="categoryId" />
    <header>

      <%- include('../layouts/headerAdmin.ejs')  %>

    </header>
    <main class="mainBodyUpdate">
      <section class="updateProduct">
        <p class="VariantText">Update category details</p>
        <form
          class="forms-sample"
          id="productUpdateForm"
          enctype="multipart/form-data"
          novalidate
        >
          <div class="form-group mb-4">
            <label class="form-label">Category Image</label>
            <div id="editImageSelector"></div>
            <p class="error-message" id="categoryUpdateImageError"></p>
          </div>
          <div class="form-group">
            <label for="categoryUpdateName">Name</label>
            <input
              type="text"
              class="form-control product-update-name"
              id="categoryUpdateName"
              name="name"
              value="<%= category.name %>"
              placeholder="Category Name"
              required
            />
            <p class="error-message" id="categoryUpdateNameError"></p>
          </div>
          <div class="modal-footer">
            <button
              type="submit"
              class="btn btn-primary"
              id="updateCategoryBtn"
            >
              Update Category
            </button>
          </div>
        </form>
      </section>
    </main>

    <footer></footer>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://unpkg.com/cropperjs@1.5.12/dist/cropper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/ios-toast.js"></script>
    <script src="/js/image-selector.js"></script>
    <script>
      let editImageSelector;
      const categoryId = document.querySelector("#categoryId").value;
      const existingImage = "<%= category.image %>";

      document.addEventListener('DOMContentLoaded', function() {
        editImageSelector = new ImageSelector('editImageSelector', {
          maxImages: 1,
          minImages: 1,
          allowCrop: true,
          aspectRatio: 1
        });
        window.editImageSelector = editImageSelector;

        if (existingImage) {
          editImageSelector.loadImages([existingImage.startsWith('/') ? existingImage : '/' + existingImage]);
        }
      });

      document
        .querySelector("#updateCategoryBtn")
        .addEventListener("click", async (e) => {
          e.preventDefault();
          
          const categoryUpdateName = document.querySelector("#categoryUpdateName");
          const categoryUpdateNameError = document.querySelector("#categoryUpdateNameError");

          if (categoryUpdateName.value.trim() === "") {
            categoryUpdateNameError.style.display = "block";
            categoryUpdateNameError.textContent = "Category name should not be empty";
            return;
          }

          categoryUpdateNameError.style.display = "none";
          
          const formData = new FormData();
          formData.append("categoryName", categoryUpdateName.value.trim());

          // Handle Image
          const images = editImageSelector.images.filter(img => img !== null);
          if (images.length > 0) {
            if (images[0].file) {
              // New image uploaded
              formData.append("categoryImage", images[0].file);
            }
            // If it's the existing image, we don't need to append anything special 
            // unless the backend needs to know it stayed the same.
            // But the backend route `/admin/category/update/:categoryId` only updates name.
            // The image update is separate in `/update-category-image/:categoryId`.
            // Wait, I should probably merge them or trigger accordingly.
          }

          try {
            const loadingToast = Toast.info("Updating", "Saving changes...", { duration: 0 });
            
            // First update name
            const nameResponse = await fetch(`/admin/category/update/${categoryId}`, {
              method: "POST",
              headers: { "Content-Type": "application/json" },
              body: JSON.stringify({ categoryName: categoryUpdateName.value.trim() }),
            });

            const nameData = await nameResponse.json();
            
            // If image changed, update image
            if (images.length > 0 && images[0].file) {
                const imageFormData = new FormData();
                imageFormData.append("categoryImage", images[0].file);
                
                await fetch(`/update-category-image/${categoryId}`, {
                    method: "POST",
                    body: imageFormData
                });
            }

            Toast.hide(loadingToast);
            if (nameData.val) {
              Toast.success("Success", "Category updated successfully");
              setTimeout(() => {
                window.location.href = `/admin/categories`;
              }, 1500);
            } else {
              Toast.error("Error", nameData.msg);
            }
          } catch (err) {
            console.log(err);
            Toast.error("Error", "Failed to update category");
          }
        });
    </script>
  </body>
</html>

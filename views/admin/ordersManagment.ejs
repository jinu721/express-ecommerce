<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Orders Management - Admin Panel</title>
    <link rel="stylesheet" href="/css/modern-admin.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
      .search-bar {
        display: flex;
        gap: 0.75rem;
        margin-bottom: 1.5rem;
      }
      .search-bar input {
        flex: 1;
        min-width: 250px;
      }
      .pagination {
        display: flex;
        gap: 0.5rem;
        list-style: none;
        padding: 0;
        justify-content: center;
        margin-top: 2rem;
      }
      .page-link {
        padding: 0.5rem 0.75rem;
        border: 1px solid var(--border-color);
        border-radius: var(--border-radius);
        color: var(--text-main);
        text-decoration: none;
        transition: all 0.2s;
      }
      .page-link:hover, .page-item.active .page-link {
        background-color: var(--primary-color);
        color: white;
        border-color: var(--primary-color);
      }
      .notification-badge {
        position: relative;
      }
      .notification-badge .fa-bell {
        position: absolute;
        top: -5px;
        right: -5px;
        font-size: 10px;
        color: var(--danger-color);
      }
    </style>
  </head>
  <body>
    <div class="admin-layout">
      <%- include('../layouts/headerAdmin.ejs') %>
      
      <div class="admin-main">
        <header class="admin-header">
          <h1 style="font-size: 1.5rem; font-weight: 600; margin: 0;">Orders Management</h1>
        </header>
        
        <main class="admin-content">
          <div class="card">
            <div class="card-header">
              <h4 class="card-title">All Orders</h4>
            </div>
            <div class="card-body">
              <form class="search-bar">
                <input type="text" class="form-control" placeholder="Search orders..." />
                <button type="submit" class="btn btn-primary">
                  <i class="fas fa-search"></i> Search
                </button>
              </form>
              
              <div class="table-responsive">
                <table class="table">
                  <thead>
                    <tr>
                      <th>Username</th>
                      <th>Date</th>
                      <th>Total Amount</th>
                      <th>Items</th>
                      <th>Order Status</th>
                      <th>Payment Status</th>
                      <th>Payment Method</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% order.forEach(data=>{ %>
                      <tr>
                        <td><%= data.user.username %></td>
                        <td><%= new Date(data.orderedAt).toLocaleDateString('en-GB', { day: '2-digit', month: 'short', year: 'numeric' }) %></td>
                        <td>â‚¹<%= data.totalAmount %></td>
                        <td><%= data.items.length %></td>
                        <td>
                          <span class="badge badge-outline-primary"><%= data.orderStatus %></span>
                        </td>
                        <td>
                          <span class="badge <%= data.paymentStatus === 'Paid' ? 'badge-outline-success' : 'badge-outline-warning' %>">
                            <%= data.paymentStatus %>
                          </span>
                        </td>
                        <td><%= data.paymentMethod %></td>
                        <td>
                          <a href="/admin/orders/view/<%= data._id %>">
                            <span class="badge badge-outline-warning notification-badge">
                              <i class="fas fa-eye"></i> View
                              <% if (data.returnRequest.requestStatus === true && data.returnRequest.adminStatus !== 'approved') { %>
                                <i class="fas fa-bell"></i>
                              <% } %>
                            </span>
                          </a>
                        </td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>

          <!-- Pagination -->
          <ul class="pagination">
            <% let startPage = Math.max(1, currentPage - Math.floor(pagesToShow / 2)); %>
            <% let endPage = Math.min(totalPages, startPage + pagesToShow - 1); %>
            
            <% if (currentPage > 1) { %>
              <li class="page-item">
                <a class="page-link" href="?page=<%= currentPage - 1 %>">Previous</a>
              </li>
            <% } %>
            
            <% for (let i = startPage; i <= endPage; i++) { %>
              <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                <a class="page-link" href="?page=<%= i %>"><%= i %></a>
              </li>
            <% } %>
            
            <% if (currentPage < totalPages) { %>
              <li class="page-item">
                <a class="page-link" href="?page=<%= currentPage + 1 %>">Next</a>
              </li>
            <% } %>
          </ul>
        </main>
      </div>
    </div>
  </body>
</html>
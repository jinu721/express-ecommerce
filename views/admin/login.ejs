<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Admin Login - Male Fashion</title>
    <link rel="stylesheet" href="/css/modern-admin.css" />
  </head>
  <body>
    <div class="admin-login-container">
      <div class="login-card">
        <div class="login-header">
          <h3>Admin Panel</h3>
          <p>Sign in to manage your store</p>
        </div>
        
        <form id="loginForm">
          <div class="form-group">
            <label for="username" class="form-label">Username</label>
            <input
              type="text"
              class="form-control"
              id="username"
              placeholder="Enter username"
              required
            />
            <p class="text-danger mt-2 d-none" id="usernameError"></p>
          </div>
          
          <div class="form-group">
            <label for="password" class="form-label">Password</label>
            <input
              type="password"
              class="form-control"
              id="password"
              placeholder="Enter password"
              required
            />
            <p class="text-danger mt-2 d-none" id="passwordError"></p>
          </div>
          
          <button type="submit" class="btn btn-primary" style="width: 100%;">
            Sign In
          </button>
        </form>
      </div>
    </div>

    <script>
      document.getElementById('loginForm').addEventListener('submit', async (event) => {
        event.preventDefault();

        const username = document.getElementById('username').value.trim();
        const password = document.getElementById('password').value.trim();
        const usernameErr = document.getElementById('usernameError');
        const passwordErr = document.getElementById('passwordError');

        // Reset errors
        usernameErr.classList.add('d-none');
        passwordErr.classList.add('d-none');

        if (!username) {
          usernameErr.textContent = 'Username is required';
          usernameErr.classList.remove('d-none');
          return;
        }
        
        if (!password) {
          passwordErr.textContent = 'Password is required';
          passwordErr.classList.remove('d-none');
          return;
        }

        try {
          const response = await fetch('/admin/login', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ username, password }),
          });

          const data = await response.json();
          
          if (data.val) {
            window.location.href = '/admin/dashboard';
          } else {
            if (data.type === 'username') {
              usernameErr.textContent = data.msg;
              usernameErr.classList.remove('d-none');
            } else if (data.type === 'password') {
              passwordErr.textContent = data.msg;
              passwordErr.classList.remove('d-none');
            }
          }
        } catch (error) {
          console.error('Error:', error);
          alert('An error occurred while logging in');
        }
      });
    </script>
  </body>
</html>

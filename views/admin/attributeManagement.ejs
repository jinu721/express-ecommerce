<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Attribute Management - Admin Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="/css/modern-admin.css">
    <link rel="stylesheet" href="/css/ios-toast.css">
    <style>
      .color-preview {
        width: 20px;
        height: 20px;
        border-radius: 3px;
        display: inline-block;
        border: 1px solid #ddd;
        vertical-align: middle;
        margin-right: 4px;
      }
      .value-badge {
        display: inline-block;
        padding: 0.25rem 0.5rem;
        margin: 0.125rem;
        background-color: #f8f9fa;
        border: 1px solid #dee2e6;
        border-radius: 0.375rem;
        font-size: 0.875rem;
        vertical-align: middle;
      }
      .table td {
        vertical-align: middle;
      }
      .btn-group-sm .btn {
        padding: 0.25rem 0.5rem;
        font-size: 0.875rem;
      }
      .modal-body .row {
        margin-bottom: 1rem;
      }
      .modal-body .row:last-child {
        margin-bottom: 0;
      }
      .form-text {
        font-size: 0.75rem;
        color: #6c757d;
      }
      .value-row {
        align-items: center;
      }
      .value-row .col-2 {
        display: flex;
        justify-content: center;
      }
    </style>
  </head>
  <body>
    <div class="admin-layout">
      <%- include('../layouts/headerAdmin.ejs') %>
      
      <div class="admin-main">
        <header class="admin-header">
          <div class="d-flex align-items-center gap-3">
              <h1 style="font-size: 1.5rem; font-weight: 600; margin: 0;">
                Attribute Management
              </h1>
          </div>
        </header>
        
        <main class="admin-content">
          <!-- Quick Actions -->
          <div class="row mb-4">
            <div class="col-md-8">
              <div class="card">
                <div class="card-body">
                  <div class="d-flex gap-2 flex-wrap">
                    <button class="btn btn-primary btn-sm" onclick="openAddAttributeModal()">
                      <i class="fas fa-plus"></i> Add Attribute
                    </button>
                    <button class="btn btn-outline-success btn-sm" onclick="createClothingAttributes()">
                      <i class="fas fa-tshirt"></i> Create Clothing Defaults
                    </button>
                    <button class="btn btn-outline-info btn-sm" onclick="refreshAttributes()">
                      <i class="fas fa-sync-alt"></i> Refresh
                    </button>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-4">
              <div class="card">
                <div class="card-body">
                  <h5 class="card-title">Statistics</h5>
                  <p class="mb-1"><strong>Total Attributes:</strong> <%= attributes.length %></p>
                  <p class="mb-0"><strong>Categories:</strong> <%= categories.length %></p>
                </div>
              </div>
            </div>
          </div>

          <div class="card">
            <div class="card-header">
              <h4 class="card-title mb-0">Product Attributes</h4>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table align-middle">
                  <thead>
                    <tr>
                      <th>Name</th>
                      <th>Display Name</th>
                      <th>Type</th>
                      <th>Category</th>
                      <th>Values</th>
                      <th>Required</th>
                      <th>Status</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if (attributes && attributes.length > 0) { %>
                        <% attributes.forEach((attribute) => { %>
                          <tr>
                            <td>
                              <strong><%= attribute.name %></strong>
                            </td>
                            <td><%= attribute.displayName %></td>
                            <td>
                              <span class="badge bg-info">
                                <%= attribute.type %>
                              </span>
                            </td>
                            <td>
                              <% if (attribute.category) { %>
                                <span class="badge bg-secondary">
                                  <%= attribute.category.name %>
                                </span>
                              <% } else { %>
                                <span class="badge bg-light text-dark">Global</span>
                              <% } %>
                            </td>
                            <td>
                              <div class="d-flex flex-wrap gap-1">
                                <% attribute.values.slice(0, 3).forEach((value) => { %>
                                  <span class="value-badge">
                                    <% if (value.hexCode) { %>
                                      <span class="color-preview me-1" style="background-color: <%= value.hexCode %>"></span>
                                    <% } %>
                                    <%= value.displayValue %>
                                  </span>
                                <% }) %>
                                <% if (attribute.values.length > 3) { %>
                                  <span class="text-muted">+<%= attribute.values.length - 3 %> more</span>
                                <% } %>
                              </div>
                            </td>
                            <td>
                              <% if (attribute.isRequired) { %>
                                <i class="fas fa-check text-success"></i>
                              <% } else { %>
                                <i class="fas fa-times text-muted"></i>
                              <% } %>
                            </td>
                            <td>
                                <span class="badge <%= attribute.isActive ? 'bg-success' : 'bg-danger' %>">
                                    <%= attribute.isActive ? 'Active' : 'Inactive' %>
                                </span>
                            </td>
                            <td>
                              <div class="btn-group btn-group-sm">
                                <button 
                                  class="btn btn-outline-primary" 
                                  onclick="openEditAttributeModal('<%= attribute._id %>')"
                                  title="Edit Attribute"
                                >
                                  <i class="fas fa-edit"></i>
                                </button>
                                <button 
                                  class="btn btn-outline-info" 
                                  onclick="manageValues('<%= attribute._id %>')"
                                  title="Manage Values"
                                >
                                  <i class="fas fa-list"></i>
                                </button>
                                <button 
                                  class="btn btn-outline-danger" 
                                  onclick="deleteAttribute('<%= attribute._id %>')"
                                  title="Delete Attribute"
                                >
                                  <i class="fas fa-trash"></i>
                                </button>
                              </div>
                            </td>
                          </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="8" class="text-center py-5 text-muted">
                                <div>
                                  <i class="fas fa-tags fa-3x mb-3"></i>
                                  <p class="mb-0">No attributes found.</p>
                                  <small>Click "Add Attribute" to create the first attribute.</small>
                                </div>
                            </td>
                        </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </main>
      </div>
    </div>

    <!-- Add/Edit Attribute Modal -->
    <div class="modal fade" id="attributeModal" tabindex="-1" aria-hidden="true">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="attributeModalLabel">Add Attribute</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <form id="attributeForm">
                <input type="hidden" id="attributeId">

                <div class="row mb-3">
                    <div class="col-6">
                        <label class="form-label">Attribute Name *</label>
                        <input type="text" class="form-control" id="attributeName" 
                               placeholder="SIZE, COLOR, MATERIAL" required>
                        <div class="form-text">Internal name (uppercase, no spaces)</div>
                    </div>
                    <div class="col-6">
                        <label class="form-label">Display Name *</label>
                        <input type="text" class="form-control" id="attributeDisplayName" 
                               placeholder="Size, Color, Material" required>
                        <div class="form-text">User-friendly name</div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-6">
                        <label class="form-label">Type</label>
                        <select class="form-select" id="attributeType" required>
                            <option value="SELECT">Select Dropdown</option>
                            <option value="COLOR_PICKER">Color Picker</option>
                            <option value="TEXT">Text Input</option>
                            <option value="NUMBER">Number Input</option>
                        </select>
                    </div>
                    <div class="col-6">
                        <label class="form-label">Category</label>
                        <select class="form-select" id="attributeCategory">
                            <option value="">Global (All Categories)</option>
                            <% categories.forEach((category) => { %>
                              <option value="<%= category._id %>"><%= category.name %></option>
                            <% }) %>
                        </select>
                    </div>
                </div>

                <div class="mb-3">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="attributeRequired">
                        <label class="form-check-label" for="attributeRequired">
                            Required attribute
                        </label>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Attribute Values</label>
                    <div id="valuesContainer">
                        <!-- Values will be added dynamically -->
                    </div>
                    <button type="button" class="btn btn-outline-secondary btn-sm" onclick="addValueRow()">
                        <i class="fas fa-plus"></i> Add Value
                    </button>
                </div>

                <div class="modal-footer px-0 pb-0">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save Attribute</button>
                </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/ios-toast.js"></script>
    <script>
        const attributeModal = new bootstrap.Modal(document.getElementById('attributeModal'));
        let valueRowCounter = 0;

        function openAddAttributeModal() {
            document.getElementById('attributeId').value = '';
            document.getElementById('attributeForm').reset();
            document.getElementById('attributeModalLabel').innerText = 'Add New Attribute';
            document.getElementById('valuesContainer').innerHTML = '';
            addValueRow(); // Add first value row
            updateColorInputsVisibility(); // Update color input visibility
            attributeModal.show();
        }

        async function openEditAttributeModal(attributeId) {
            try {
                const response = await fetch(`/admin/attributes?_id=${attributeId}`);
                const data = await response.json();
                
                if (data.success && data.attributes.length > 0) {
                    const attribute = data.attributes[0];
                    
                    document.getElementById('attributeId').value = attributeId;
                    document.getElementById('attributeName').value = attribute.name;
                    document.getElementById('attributeDisplayName').value = attribute.displayName;
                    document.getElementById('attributeType').value = attribute.type;
                    document.getElementById('attributeCategory').value = attribute.category || '';
                    document.getElementById('attributeRequired').checked = attribute.isRequired;
                    document.getElementById('attributeModalLabel').innerText = 'Edit Attribute';
                    
                    // Load values
                    const container = document.getElementById('valuesContainer');
                    container.innerHTML = '';
                    
                    attribute.values.forEach(value => {
                        addValueRow(value.value, value.displayValue, value.hexCode, value.sortOrder);
                    });
                    
                    if (attribute.values.length === 0) {
                        addValueRow(); // Add empty row if no values
                    }
                    
                    updateColorInputsVisibility(); // Update color input visibility
                    attributeModal.show();
                }
            } catch (error) {
                Toast.error('Error', 'Failed to load attribute data');
            }
        }

        function addValueRow(value = '', displayValue = '', hexCode = '', sortOrder = 0) {
            const container = document.getElementById('valuesContainer');
            const rowId = `valueRow_${valueRowCounter++}`;
            
            const row = document.createElement('div');
            row.className = 'row mb-2 value-row';
            row.id = rowId;
            
            row.innerHTML = `
                <div class="col-3">
                    <input type="text" class="form-control form-control-sm" 
                           placeholder="Value (e.g., S, M, L)" name="value[]" value="${value}">
                </div>
                <div class="col-3">
                    <input type="text" class="form-control form-control-sm" 
                           placeholder="Display Name (e.g., Small)" name="displayValue[]" value="${displayValue}">
                </div>
                <div class="col-2">
                    <input type="color" class="form-control form-control-sm form-control-color color-input" 
                           name="hexCode[]" value="${hexCode || '#000000'}" title="Color (optional)"
                           style="display: none;">
                </div>
                <div class="col-2">
                    <input type="number" class="form-control form-control-sm" 
                           placeholder="Order" name="sortOrder[]" value="${sortOrder}" min="0" max="999">
                </div>
                <div class="col-2">
                    <button type="button" class="btn btn-outline-danger btn-sm w-100" 
                            onclick="removeValueRow('${rowId}')" title="Remove">
                        <i class="fas fa-trash"></i>
                    </button>
                </div>
            `;
            
            container.appendChild(row);
            
            // Show/hide color input based on current attribute type
            updateColorInputsVisibility();
        }

        function removeValueRow(rowId) {
            document.getElementById(rowId).remove();
        }

        document.getElementById('attributeForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const attributeId = document.getElementById('attributeId').value;
            const name = document.getElementById('attributeName').value.toUpperCase();
            const displayName = document.getElementById('attributeDisplayName').value;
            const type = document.getElementById('attributeType').value;
            const category = document.getElementById('attributeCategory').value || null;
            const isRequired = document.getElementById('attributeRequired').checked;
            
            // Collect values
            const values = [];
            const valueInputs = document.querySelectorAll('input[name="value[]"]');
            const displayValueInputs = document.querySelectorAll('input[name="displayValue[]"]');
            const hexCodeInputs = document.querySelectorAll('input[name="hexCode[]"]');
            const sortOrderInputs = document.querySelectorAll('input[name="sortOrder[]"]');
            
            for (let i = 0; i < valueInputs.length; i++) {
                const value = valueInputs[i].value.trim();
                const displayValue = displayValueInputs[i].value.trim();
                
                if (value && displayValue) {
                    values.push({
                        value: value,
                        displayValue: displayValue,
                        hexCode: type === 'COLOR_PICKER' ? hexCodeInputs[i].value : null,
                        sortOrder: parseInt(sortOrderInputs[i].value) || 0,
                        isActive: true
                    });
                }
            }
            
            const isEdit = !!attributeId;
            const url = isEdit ? `/admin/attributes/${attributeId}` : '/admin/attributes';
            const method = isEdit ? 'PUT' : 'POST';

            try {
                const response = await fetch(url, {
                    method,
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ 
                        name, 
                        displayName, 
                        type, 
                        category, 
                        isRequired,
                        values
                    })
                });

                const result = await response.json();
                if (result.success) {
                    Toast.success('Success', result.message);
                    setTimeout(() => location.reload(), 1500);
                } else {
                    throw new Error(result.message);
                }
            } catch (error) {
                Toast.error('Error', error.message);
            }
        });

        async function deleteAttribute(id) {
            const confirmed = await Toast.confirm({
                title: 'Are you sure?',
                message: "This will affect all products using this attribute!",
                confirmText: 'Yes, delete it!',
                cancelText: 'Cancel',
                type: 'error'
            });

            if (confirmed) {
                try {
                    const response = await fetch(`/admin/attributes/${id}`, { method: 'DELETE' });
                    const json = await response.json();
                    if (json.success) {
                        Toast.success('Deleted!', 'Attribute has been deleted.');
                        setTimeout(() => location.reload(), 1500);
                    } else {
                        throw new Error(json.message);
                    }
                } catch (error) {
                    Toast.error('Error', error.message);
                }
            }
        }

        async function createClothingAttributes() {
            const confirmed = await Toast.confirm({
                title: 'Create Default Clothing Attributes?',
                message: "This will create SIZE and COLOR attributes with common values.",
                confirmText: 'Yes, create them!',
                cancelText: 'Cancel',
                type: 'info'
            });

            if (confirmed) {
                try {
                    const response = await fetch('/admin/attributes/bulk/clothing', { 
                        method: 'POST' 
                    });
                    const json = await response.json();
                    if (json.success) {
                        Toast.success('Created!', json.message);
                        setTimeout(() => location.reload(), 1500);
                    } else {
                        throw new Error(json.message);
                    }
                } catch (error) {
                    Toast.error('Error', error.message);
                }
            }
        }

        function manageValues(attributeId) {
            // For now, redirect to edit modal
            openEditAttributeModal(attributeId);
        }

        function refreshAttributes() {
            location.reload();
        }

        // Function to show/hide color inputs based on attribute type
        function updateColorInputsVisibility() {
            const attributeType = document.getElementById('attributeType').value;
            const colorInputs = document.querySelectorAll('.color-input');
            
            colorInputs.forEach(input => {
                if (attributeType === 'COLOR_PICKER') {
                    input.style.display = 'block';
                } else {
                    input.style.display = 'none';
                    input.value = '#000000'; // Reset to default
                }
            });
        }

        // Listen for attribute type changes
        document.getElementById('attributeType').addEventListener('change', updateColorInputsVisibility);
    </script>
  </body>
</html>